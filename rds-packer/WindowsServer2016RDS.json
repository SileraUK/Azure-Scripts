{
    "variables": {
      "subnet_id": "Rds-AustraliaSoutheast-subnet"
    },
  "builders": [
    {
      "type": "azure-arm",
      "client_id": "FROMSCRIPT",
      "client_secret": "FROMSCRIPT",
      "subscription_id": "FROMSCRIPT",
      "tenant_id": "FROMSCRIPT",
      "managed_image_name": "",
      "managed_image_resource_group_name": "",
      "os_type": "Windows",
      "image_publisher": "MicrosoftWindowsServer",
      "image_offer": "WindowsServer",
      "image_sku": "2016-Datacenter",
      "image_version": "latest",
      "communicator": "winrm",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_timeout": "3m",
      "winrm_username": "packer",
      "azure_tags": {
        "Role": "Master image"
      },
      "location": "australiasoutheast",
      "vm_size": "Standard_DS2_v2"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "New-RdsHost.ps1 -Task RegionalSettings",
        "New-RdsHost.ps1 -Task Roles"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "script": "New-RdsHost.ps1 -Task WindowsUpdates"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "script": "New-RdsHost.ps1 -Task CoreApps"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "scripts": [
        "New-RdsHost.ps1 -Task LobApps",
        "New-RdsHost.ps1 -Task Customisations"
      ]
    },
    {
      "type": "windows-restart"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "packer-win2016-rds-manifest.json",
      "strip_path": true
    }
  ]
}