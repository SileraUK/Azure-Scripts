{
    "variables": {
      "subnet_id": "Rds-AustraliaSoutheast-subnet"
    },
  "builders": [
    {
      "type": "azure-arm",
      "client_id": "",
      "client_secret": "",
      "subscription_id": "",
      "tenant_id": "",
      "managed_image_name": "",
      "managed_image_resource_group_name": "",
      "os_type": "Windows",
      "image_publisher": "MicrosoftWindowsServer",
      "image_offer": "WindowsServer",
      "image_sku": "2016-Datacenter",
      "image_version": "latest",
      "communicator": "winrm",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_timeout": "3m",
      "winrm_username": "packer",
      "azure_tags": {
        "Role": "Master image",
        "Type": "Remote Desktop Services"
      },
      "location": "australiasoutheast",
      "vm_size": "Standard_DS2_v2"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "script": "Rds-RegionalRoles.ps1"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "script": "Rds-Updates.ps1"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "script": "Rds-CoreApps.ps1"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "script": "Rds-LobApps.ps1"
    },
    {
      "type": "windows-restart"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "packer-win2016-rds-manifest.json",
      "strip_path": true
    }
  ]
}