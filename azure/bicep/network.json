{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "AustraliaEast"
    },
    "suffix": {
      "type": "string",
      "defaultValue": "WindowsVirtualDesktop"
    },
    "vnetPrefix": {
      "type": "string",
      "defaultValue": "10.1.0.0/16"
    },
    "subnetInfrastructure": {
      "type": "string",
      "defaultValue": "Infrastructure"
    },
    "subnetInfrastructurePrefix": {
      "type": "string",
      "defaultValue": "10.1.1.0/24"
    },
    "subnetPooled": {
      "type": "string",
      "defaultValue": "PooledDesktops"
    },
    "subnetPooledPrefix": {
      "type": "string",
      "defaultValue": "10.1.2.0/24"
    },
    "subnetPersonal": {
      "type": "string",
      "defaultValue": "PersonalDesktops"
    },
    "subnetPersonalPrefix": {
      "type": "string",
      "defaultValue": "10.1.3.0/24"
    }
  },
  "functions": [],
  "variables": {
    "subnetInfrastructureName": "[concat('subnet-', parameters('subnetInfrastructure'))]",
    "subnetPooledName": "[concat('subnet-', parameters('subnetPooled'))]",
    "subnetPersonalName": "[concat('subnet-', parameters('subnetPersonal'))]",
    "nsgInfrastructureName": "[concat('nsg-', parameters('subnetInfrastructure'))]",
    "nsgPooledName": "[concat('nsg-', parameters('subnetPooled'))]",
    "nsgPersonalName": "[concat('nsg-', parameters('subnetPersonal'))]",
    "vnetName": "[format('vnet-{0}-{1}', parameters('suffix'), parameters('location'))]",
    "function": "WindowsVirtualDesktop",
    "environment": "Development",
    "rdpRule": {
      "name": "default-allow-rdp",
      "properties": {
        "priority": 1000,
        "sourceAddressPrefix": "*",
        "protocol": "Tcp",
        "destinationPortRange": "3389",
        "access": "Allow",
        "direction": "Inbound",
        "sourcePortRange": "*",
        "destinationAddressPrefix": "*"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2018-10-01",
      "name": "[variables('vnetName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "Function": "[variables('function')]",
        "Environment": "[variables('environment')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetPrefix')]"
          ]
        },
        "enableVmProtection": false,
        "enableDdosProtection": false,
        "subnets": [
          {
            "name": "[variables('subnetInfrastructureName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetInfrastructurePrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgInfrastructureName'))]"
              }
            }
          },
          {
            "name": "[variables('subnetPooledName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetPooledPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgPooledName'))]"
              }
            }
          },
          {
            "name": "[variables('subnetPersonalName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetPersonalPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgPersonalName'))]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgInfrastructureName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgPooledName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgPersonalName'))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-05-01",
      "name": "[variables('nsgInfrastructureName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          "[variables('rdpRule')]"
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-05-01",
      "name": "[variables('nsgPooledName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          "[variables('rdpRule')]"
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-05-01",
      "name": "[variables('nsgPersonalName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          "[variables('rdpRule')]"
        ]
      }
    }
  ],
  "outputs": {
    "networkid": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
    }
  }
}