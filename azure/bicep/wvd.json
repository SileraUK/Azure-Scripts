{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "westus"
    },
    "workspaceName": {
      "type": "string",
      "defaultValue": "Workspace-AustraliaEast1"
    },
    "workspaceNameFriendlyName": {
      "type": "string",
      "defaultValue": "Australia East1"
    },
    "hostpoolName": {
      "type": "string",
      "defaultValue": "Windows10-2004-Pooled-AustraliaEast1"
    },
    "hostpoolFriendlyName": {
      "type": "string",
      "defaultValue": "Windows10-2004-Pooled-AustraliaEast1"
    },
    "appgroupName": {
      "type": "string",
      "defaultValue": "Windows10-2004-Pooled-AustraliaEast-DAG1"
    },
    "appgroupNameFriendlyName": {
      "type": "string",
      "defaultValue": "Windows10-2004-Pooled-AustraliaEast-DAG1"
    }
  },
  "functions": [],
  "variables": {
    "function": "WindowsVirtualDesktop",
    "environment": "Development",
    "hostpooltype": "pooled",
    "loadbalancertype": "BreadthFirst",
    "appgroupType": "Desktop"
  },
  "resources": [
    {
      "type": "Microsoft.DesktopVirtualization/hostpools",
      "apiVersion": "2019-12-10-preview",
      "name": "[parameters('hostpoolName')]",
      "location": "[parameters('location')]",
      "properties": {
        "friendlyname": "[parameters('hostpoolFriendlyName')]",
        "tags": {
          "Function": "[variables('function')]",
          "Environment": "[variables('environment')]"
        },
        "hostpooltype": "[variables('hostpooltype')]",
        "loadbalancertype": "[variables('loadbalancertype')]"
      }
    },
    {
      "type": "Microsoft.DesktopVirtualization/applicationgroups",
      "apiVersion": "2019-12-10-preview",
      "name": "[parameters('appgroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "friendlyname": "[parameters('appgroupNameFriendlyName')]",
        "tags": {
          "Function": "[variables('function')]",
          "Environment": "[variables('environment')]"
        },
        "applicationgrouptype": "[variables('appgroupType')]",
        "hostpoolarmpath": "[resourceId('Microsoft.DesktopVirtualization/hostpools', parameters('hostpoolName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DesktopVirtualization/hostpools', parameters('hostpoolName'))]"
      ]
    },
    {
      "type": "Microsoft.DesktopVirtualization/workspaces",
      "apiVersion": "2019-12-10-preview",
      "name": "[parameters('workspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "friendlyname": "[parameters('workspaceNameFriendlyName')]",
        "tags": {
          "Function": "[variables('function')]",
          "Environment": "[variables('environment')]"
        },
        "applicationGroupReferences": []
      }
    }
  ],
  "outputs": {
    "workspaceid": {
      "type": "string",
      "value": "[resourceId('Microsoft.DesktopVirtualization/workspaces', parameters('workspaceName'))]"
    }
  }
}